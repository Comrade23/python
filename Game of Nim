        print( '\nDumb Mode \n' )

    # Smart Mode

    else :

        print( '\nSmart Mode \n' )

    # Determine turn Computer or Player (random)

    whoGoesFirst = randint( 0 , 1 )

    # Player goes first

    if whoGoesFirst == 1 :

        print( 'Player goes first.' )

    # Computer goes first

    else : 

        print( 'Computer goes first.' )

    # Determine how many balls to start (random)

    ballCount = randint( 10 , 100 )

    print( 'Ball Count: ', ballCount )



    # Play the game after setup until either player or computer wins.
    # Loop until 1 ball left


